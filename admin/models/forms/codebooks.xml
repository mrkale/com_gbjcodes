<form>
    <fieldset name="gridfields">

        <!-- The first field here is considered as a default search field. -->
        <!-- Default type for searching is string. -->
        <field
            name="title"
            type="string"
            label="LIB_GBJ_FIELD_TITLE_LABEL"
            labelclass="title"
            class="has-context"
        />

        <field
            name="alias"
            type="string"
            label="COM_GBJCODES_FIELD_CODEBOOK_ALIAS_LABEL"
            width="10%"
        />

        <field
            name="codes"
            type="number"
            label="COM_GBJCODES_FIELD_CODEBOOK_CODES_LABEL"
            labelclass="center"
            class="center"
            default="LIB_GBJ_SELECT_NONE"
            variants="#,_arch,_total"
        />

        <field
            name="grid_admin"
            type="subform"
        />

    </fieldset>
</form>
