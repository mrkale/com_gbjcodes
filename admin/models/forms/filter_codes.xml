<form>

    <fields name="filter">

        <field
            name="search"
            type="text"
            label="JSEARCH_FILTER_LABEL"
            description="LIB_GBJ_SEARCH_VALUE_DESC"
            hint="JSEARCH_FILTER"
            class="js-stools-search-string"
            noresults="JGLOBAL_NO_MATCHING_RESULTS"
        />

        <field
            name="state"
            type="status"
            label="JOPTION_SELECT_PUBLISHED"
            onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field
            name="featured"
            type="list"
            label="LIB_GBJ_SELECT_FEATURED"
            onchange="this.form.submit();"
        >
            <option value="">LIB_GBJ_SELECT_FEATURED</option>
            <option value="1">LIB_GBJ_FEATURED</option>
            <option value="0">LIB_GBJ_UNFEATURED</option>
        </field>

    </fields>

    <fields name="list">

        <field
            name="fullordering"
            type="list"
            label="JGLOBAL_SORT_BY"
            statuses="*,0,1,2,-2"
            description="JGLOBAL_SORT_BY"
            onchange="this.form.submit();"
            default="title ASC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="state ASC">JSTATUS_ASC</option>
            <option value="state DESC">JSTATUS_DESC</option>
            <option value="featured ASC">JFEATURED_ASC</option>
            <option value="featured DESC">JFEATURED_DESC</option>
            <option value="title ASC">COM_GBJCODES_HEADING_CODE_TITLE_ASC</option>
            <option value="title DESC">COM_GBJCODES_HEADING_CODE_TITLE_DESC</option>
            <option value="alias ASC">COM_GBJCODES_HEADING_CODE_ALIAS_ASC</option>
            <option value="alias DESC">COM_GBJCODES_HEADING_CODE_ALIAS_DESC</option>
            <option value="modified ASC">COM_GBJCODES_HEADING_MODIFIED_ASC</option>
            <option value="modified DESC">COM_GBJCODES_HEADING_MODIFIED_DESC</option>
            <option value="id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="id DESC">JGRID_HEADING_ID_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="20"
            label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
            description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
            onchange="this.form.submit();"
        />

    </fields>

</form>
